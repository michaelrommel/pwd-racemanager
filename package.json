{
  "name": "pwd-racemanager",
  "version": "0.5.0",
  "description": "A minimalistic web UI for managing a Pinewood Derby race.",
  "homepage": "https://pwd-racetrack/manager",
  "private": true,
  "scripts": {
    "lint": "standard",
    "pretest": "standard",
    "start": "cross-env PORT=3000 react-scripts start",
    "build": "react-scripts build",
    "deploy": "scp -r build/* rommel@pwd-racetrack.michaelrommel.com:/home/rommel/software/pwd-racetrack/bridge/network/routes/static/manager",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/michaelrommel/pwd-racemanager"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.15.1",
    "@blueprintjs/datetime": "^3.9.0",
    "@blueprintjs/icons": "^3.8.0",
    "@blueprintjs/select": "^3.8.0",
    "@blueprintjs/table": "^3.5.0",
    "@blueprintjs/timezone": "^3.4.0",
    "axios": "^0.18.0",
    "formik": "^1.5.7",
    "memoize-one": "^5.0.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "^3.0.1",
    "reconnecting-websocket": "^4.1.10",
    "reflexbox": "^3.0.1",
    "simplebar-react": "^1.1.0",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "cross-env": "^5.2.0",
    "standard": "^12.0.1",
    "typescript": "^3.4.5"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "parser": "babel-eslint",
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect",
      "fetch"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
